    @{
        ViewBag.Title = "List";
        Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
    }
    @section Head{
        <link href="/css/themes/@Common.PublicConst.TempCss/easyui.css" rel="stylesheet" type="text/css" />
        <link href="/css/themes/icon.css" rel="stylesheet" type="text/css" />
