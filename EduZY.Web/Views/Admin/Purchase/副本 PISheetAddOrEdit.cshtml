            success: function (data) {
                if (data.status == '1') {

                    $.ligerDialog.success('审核成功  ！', '提示', function () {

                        window.location.href = '/admin/Purchase/PISheet';
                    });
                }
                else {

                    $.ligerDialog.warn('保存失败！', '提示', function () {
                        return;
                    });
                }
            }
        });
    }


    function SetRange(BasicRightID) {
