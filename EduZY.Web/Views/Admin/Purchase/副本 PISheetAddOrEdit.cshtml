    //保存
    function saveCommonAction() {

    
        var txtSerialNum = document.getElementById("SerialNum").value;
        if (txtSerialNum == "") {
            $.ligerDialog.warn("流水号不能为空！");
            document.getElementById("SerialNum").focus();
