<div id="dlg-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" onclick="saveInfo()">
        保存</a> <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel"
            onclick="javascript:$('#dlg').dialog('close')">取消</a>
</div>
<script type="text/javascript">

    function search() {
        $('#dg').datagrid('load', {
            KeyWord: '' + $("#KeyWord").val() + ''
        });

    }


    function add_fun() {

        $('#dlg').dialog('open').dialog('setTitle', '添加');
        $('#fm').form('clear');

    }
    function edit_fun() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '修改');
            $('#fm').form('load', row);

        } else {
            $.messager.alert("提示", "请选择你要修改的数据")
        }
    }


    function saveInfo() {
        $.ajax({
            type: "POST",
            url: "/admin/Product/saveView_SelectJfList",
            dataType: "json",
            data: $('#fm').serializeArray(), //serializeArray  serialize
            beforeSend: function () {
                return $('#fm').form('validate');
            },
            success: function (data) {
                if (data.status == "1") {
                    $('#dlg').dialog('close');
                    $('#dg').datagrid('reload');
                }
                else {
                    $.messager.show({
                        title: 'Error',
                        msg: data.msg
                    });
                }
            }
        });
        return false;
    }
    function del_fun() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $.messager.confirm('提示', '您确实要删除该数据吗?', function (r) {
                if (r) {
                    $.post('/admin/Product/DelView_SelectJfList', { id: row.id }, function (result) {
                        if (result.status == 1) {
                            $('#dg').datagrid('reload');    // reload the user data
                        } else {
                            $.messager.show({    // show error message
                                title: 'Error',
                                msg: result.msg
                            });
                        }
                    }, 'json');
                }
            });
        }
        else {
            $.messager.alert("提示", "请选择你要删除的数据")
        }
    }
</script>
