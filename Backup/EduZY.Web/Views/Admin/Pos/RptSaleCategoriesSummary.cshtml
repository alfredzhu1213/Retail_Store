              <script>

                  function selectCommon(keyword) {
                      $.layer({
                          type: 2,
                          maxmin: true,
                          shadeClose: true,
                          title: '选择类别',
                          shade: [0.1, '#fff'],
                          offset: ['30px', '520px'],
                          area: ['400px', ($(window).height() - 100) + 'px'],
                          iframe: { src: '/admin/Common/SelectProductType?type=1' }, end: function () { }
                      });
                  }

                  function search() {

                      $('#dg').datagrid('load', {
                          KeyWord: '' + $("#KeyWord").val() + '',
                          ClassName: '' + $("#ClassName").val() + '',
                          StoreIds: '' + $("#StoreIds").val() + '',
                          StoreNames: '' + $("#StoreNames").val() + ''
